<div>
  <%= flash[:notice] %>
</div>

<div class="contaner">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <% if @book.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @book.errors.count %>error prohibited this obj from being saved:
          </h6>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, autofocus: true, id:"title", placeholder:"title", class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body, autofocus: true, id:"body", placeholder:"Opinion", class:"form-control book_body" %>
    </div>
    <div class="form-gourp">
      <%= f.submit "Update Book", class:"btn btn-success" %>
    </div>
<% end %>

<div class="btn">
<%= link_to "Show", book_path %> |
<%= link_to "Back", books_path %>
</div>