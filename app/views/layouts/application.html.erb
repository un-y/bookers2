<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/02a74fdcb6.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item fs-4">
              <%= link_to "Bookers", root_path, class: 'text-light h5' %>
            </li>
          </ul>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% if user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item ml-3">
                <%= link_to user_path(current_user.id), style: "color: white;" do %>
                  <i class="fa-solid fa-house"></i> Home
                <% end %>
              </li>
              <li class="nav-item ml-3">
                <%= link_to(users_path, style: "color: white;") do %>
                  <i class="fa-solid fa-users"></i> Users
                <% end %>
              </li>
              <li class="nav-item ml-3">
                <%= link_to(books_path, style: "color: white;") do %>
                  <i class="fa-solid fa-book-open"></i> Books
                <% end %>
               </li>
              <li class="nav-item ml-3 mr-2">
                <%= link_to(destroy_user_session_path, method: :delete, style: "color: white;") do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log out
                <% end %>
              </li>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item ml-3">
                  <%= link_to(root_path, style: "color: white;") do %>
                    <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to(about_path, style: "color: white;") do %>
                    <i class="fa-solid fa-link"></i> About
                  <% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to(new_user_registration_path, style: "color: white;") do %>
                    <i class="fa-solid fa-user-plus"></i> Sign up
                  <% end %>
                </ li>
                <li class="nav-item ml-3 mr-2">
                  <%= link_to(new_user_session_path, style: "color: white;") do %>
                    <i class="fa-solid fa-right-to-bracket"></i> Log in
                  <% end %>
                </li>
              </ul>
            </ul>
          </div>
        </div>
        </nav>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    <footer>
  </body>
</html>
